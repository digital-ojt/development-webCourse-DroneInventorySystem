# EditorConfig設定ファイル
# https://editorconfig.org/

root = true

# すべてのファイル
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Javaファイル
[*.java]
indent_style = tab
indent_size = 4
max_line_length = 120

# XMLファイル
[*.xml]
indent_style = tab
indent_size = 4

# プロパティファイル
[*.properties]
indent_style = tab
indent_size = 4

# YAMLファイル
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSONファイル
[*.json]
indent_style = space
indent_size = 2

# Markdownファイル
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
